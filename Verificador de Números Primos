programa {
  funcao inicio() {
    inteiro x, valor = 1, divisores = 0
    escreva("Verificador de Números Primos\n\n")
    escreva ("\nDigite um valor e direi se o mesmo é um número primo ou não:")
    leia (x)

    se (x > 0){
      enquanto (valor <= x)
      {se ( x % valor == 0){divisores++}valor++}

    se (divisores == 2) 
      escreva ("O número ", x,"\té primo!\n")
      senao {escreva ("o número ", x,"\t não é primo!\n")}}}}
